<resources>
    <!-- Base application theme. -->
    <style name="Theme.ChoreoMusicHelper" parent="Theme.MaterialComponents">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
    </style>

    <style name="MainButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">40dp</item>
    </style>

    <style name="PlayButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">60dp</item>
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">44dp</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="icon">@drawable/baseline_play_arrow_24</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="PlayButtonSmall" parent="@style/PlayButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconSize">30dp</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="BorderedButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">5dp</item>
        <item name="android:textIsSelectable">false</item>
    </style>

    <style name="RoundButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="backgroundTint">@android:color/black</item>
        <item name="iconTint">?colorPrimary</item>
        <item name="iconSize">30dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="strokeColor">?colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ColorButton" parent="@style/RoundButton">
        <item name="icon">@drawable/baseline_palette_24</item>
    </style>

    <style name="loop">
        <item name="loopTrackSelectedColor">@color/selected_track</item>
        <item name="loopTrackUnselectedColor">@android:color/transparent</item>
        <item name="loopSelectedColor">@color/secondary</item>
        <item name="loopSelectedTextColor">@color/primary</item>
        <item name="loopUnselectedColor">@color/deactivated_background</item>
        <item name="loopUnselectedTextColor">@color/activated_text</item>
    </style>

    <style name="Slider">
        <item name="trackColorActive">@color/secondary</item>
        <item name="trackColorInactive">@color/slider_inactive</item>
        <item name="thumbColor">@color/secondary</item>
    </style>
</resources>